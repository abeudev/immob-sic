{% extends 'layout/base.html.twig' %}


{% block title %}
	{{ 'Prise de RDV' | trans }}
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('css/select2') }}
	<link href="{{ asset('libs/summernote/0.8.20/summernote-bs4.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
	<div class="row mt-4 mb-4">
		<div class="col-md-12">
			<div class="row">
				<div class="col-sm-12 mb-3">
					<h3>{{ 'Voulez-Vous prendre un rendez-vous pour le bien' }}</h3>
				</div>
			</div>
			<div class="card mb-3">
				<div class="card-header">
					<i class="fa fa-calendar"></i>
					{{ 'Prenez un rendez-vous' | trans }}
				</div>
				<div class="card-body">

					{% form_theme form 'bootstrap_4_layout.html.twig' %}

					{{ form_start(form) }}

					<div class="row">

						<div class="col-md-12 col-lg-6 mb-3">
							{{ form_row(form.fullname) }}

						</div>

						<div class="col-md-12 col-lg-6 mb-3">
							{{ form_row(form.phone) }}

						</div>

						<div class="col-md-12 col-lg-6 mb-3">
							{{ form_row(form.dateRdv) }}

						</div>
					</div>
					<hr>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">
							{{ 'Sauver' | trans }}
						</button>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
			<br>
		</div>
	</div>
{% endblock %}


{% block javascripts %}

	{{ encore_entry_script_tags('js/city') }}
    
	{{ encore_entry_script_tags('js/select2') }}

	<script src="{{ asset('libs/summernote/0.8.20/summernote-bs4.min.js') }}"></script>

{% endblock %}
