{% extends 'layout/base.html.twig' %}

{% block title %}{{ 'title.login' | trans }}{% endblock %}
{% block header %}
	{{ include('layout/partials/header_home.html.twig') }}
	{# {{ include('property/partials/_search_form.html.twig') }} #}
      <section class="section-full undefined text-center text-sm-left">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 undefined">
            <h1>Login/Register</h1>
            <p></p>
            <ol class="breadcrumb">
              <li>
                <a href="index.html">Home</a>
              </li>
              <li>
                <a href="#">Extras</a>
              </li>
              <li class="active">Login/Register</li>
            </ol>
          </div>
        </div>
      </div>
    </section>
{% endblock %}
{% block body %}

    <br>

    {% if error %}
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
  <!--Section Login-->
    <section class="section-md text-center text-sm-left">
      <div class="container">
        <h2>{{ 'title.login'|trans }}</h2>
        <hr>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">

                <div class="card-body">
                    <form action="{{ path('security_login') }}" method="post">
                        <div class="form-group row">
                            <label for="username" class="col-sm-4 col-form-label text-md-right">
                                {{ 'label.username'|trans }}
                            </label>
                            <div class="col-md-6">
                                <input type="text" id="username" name="_username" value="{{ last_username }}"
                                       required="required" autofocus="autofocus" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="password" class="col-md-4 col-form-label text-md-right">
                                {{ 'label.password'|trans }}
                            </label>
                            <div class="col-md-6">

                                <input type="password" id="password" name="_password" required="required"
                                       class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col col-md-8 pull-lg-left"><a class=" btn-link" href="{{ path('password_reset') }}">
                                    {{ 'action.forgot_password'|trans }}
                                </a></div>
                            <div class="col col-md-4 pull-right">
                                <input type="checkbox" class="" id="remember_me" name="_remember_me"
                                       checked/>

                                <label for="remember_me">
                                    {{ 'label.remember_me'|trans }}
                                </label>
                            </div>
                        </div>

                        <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}"/>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

                        <div class="form-group row mb-0">
                            <div class="col-md-8 offset-md-8 pull-right">
                                <button type="submit" class="btn btn-primary">
                                    {{ 'action.sign_in'|trans }}
                                </button>

                                {# <a class="btn btn-link" href="{{ path('password_reset') }}">
                                    {{ 'action.forgot_password'|trans }}
                                </a> #}
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <br><br>


{% endblock %}
