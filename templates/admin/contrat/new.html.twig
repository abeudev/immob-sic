{% extends 'admin/layout/base.html.twig' %}

{% block title %}
	{{ 'Ajouter un contrat' | trans }}
{% endblock %}

{% block body %}

	<ul class="nav nav-tabs">
		<li class="nav-item">
			<a class="nav-link" href="{{ path('admin_contrat') }}">
				<i class="fas fa-gavel text-danger"></i>
				{{ 'contrat'|trans }}
			</a>
		</li>
		<li class="nav-item active">
			<span class="nav-link active">
				<i class="fas fa-plus-square text-danger"></i>
				{{ 'créer un contrat'|trans }}
			</span>
		</li>
	</ul>

	<div class="card mb-3">

		<div class="card-body">

			{{ form_start(form) }}

			<div class="form-group" id="bien">
				{{ form_row(form.bien) }}
			</div>

			<div class="form-group" id="bien">
				{{ form_row(form.user) }}
			</div>

			<div class="form-group" id="dateDebut">
				{{ form_row(form.dateDebut) }}
			</div>

			<div class="form-group" id="dateFin">
				{{ form_row(form.dateFin) }}
			</div>


			<div class="form-group">

				<button type="submit" class="btn btn-primary">
					{{ 'Créer un contrat'|trans }}
				</button>

				{{ form_widget(form.saveAndCreateNew, {label: 'Enregistrer et créer un nouveau contrat', attr: {class: 'btn btn-primary'}}) }}

			</div>

			{{ form_end(form) }}

		</div>
	</div><br>

{% endblock %}

{% block javascripts %}

	{{ encore_entry_script_tags('js/slugger') }}

{% endblock %}
