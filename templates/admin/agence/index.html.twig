{% extends 'admin/layout/base.html.twig' %}

{% block title %}
	{{ 'agence'|trans }}
{% endblock %}

{% block body %}

<ul class="nav nav-tabs">
	<li class="nav-item active">
		<span class="nav-link active">
			<i class="fas fa-gavel text-danger"></i>
			{{ 'agences'|trans }}

		</span>
	</li>
	<li class="nav-item">
		<a class="nav-link" href="{{ path('admin_agences_new') }}">
			<i class="fas fa-plus-square text-danger"></i>
			{{ 'cr√©er une agence'|trans }}
		</a>
	</li>
</ul>

<div class="card mb-3">

	<div class="card-body">
		<div class="table-responsive">
			<table class="table" style="background-color: #FFFFFF">
				<thead class="thead">
					<tr>
						<th>{{"Structure" | trans}}</th>
						<th>{{ 'Nom de l\'agence' | trans }}</th>
							<th>{{ 'email' | trans }}</th>
							<th>{{ 'contact' | trans }}</th>
							<th>{{ 'adresse' | trans }}</th>
							<th>{{ 'action' | trans }}</th>
						</tr>
				 	</thead>
					<tbody>

                        {% for agence in agences %}
							<tr>
								<td>{{agence.StructureId.libelle |raw }}</td>
								<td>{{ agence.libelle }}</td>
								<td>{{ agence.email }}</td>
								<td>{{ agence.contact }}</td>
								<td>{{ agence.adresse }}</td>
								<td>
									{{ include('admin/agence/_action_form.html.twig', {agence: agence}, with_context = false) }}
								</td>
							</tr>

						{% else %}
							<tr>
								<td>{{ 'no_items_found' | trans }}</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %} 
