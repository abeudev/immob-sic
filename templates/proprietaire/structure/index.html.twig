{% extends 'admin/layout/base.html.twig' %}

{% block title %}
	{{ 'structure'|trans }}
{% endblock %}

{% block body %}

	<ul class="nav nav-tabs">
		<li class="nav-item active">
			<span class="nav-link active">
				<i class="fas fa-gavel text-danger"></i>
				{{ 'structures'|trans }}

			</span>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="{{ path('admin_structures_new') }}">

				<i class="fas fa-plus-square text-danger"></i>
				{{ 'créer une structure'|trans }}
			</a>
		</li>
	</ul>

	<div class="card mb-3">

		<div class="card-body">
			<div class="table-responsive">
				<table class="table" style="background-color: #FFFFFF">
					<thead class="thead">
						<tr>
							<th>{{ 'Nom de la structure' | trans }}</th>
							<th>{{ 'Immatriculation au registre du commerce et des sociétés' | trans }}</th>
							<th>{{ 'adresse' | trans }}</th>
							<th>{{ 'contact' | trans }}</th>
							<th>{{ 'email' | trans }}</th>
							<th>{{ 'site Web' | trans }}</th>
							<th>{{ 'action' | trans }}</th>
						</tr>
					</thead>
					<tbody>

						{% for structure in structure %}
							<tr>
								<td>{{ structure.libelle }}</td>
								<td>{{ structure.NumeroRegisteDeCommerce }}</td>
								<td>{{ structure.adresse }}</td>
								<td>{{ structure.contact }}</td>
								<td>{{ structure.email }}</td>
								<td>{{ structure.siteWeb }}</td>

								<td>
									{{ include('admin/structure/_action_form.html.twig', {structure: structure}, with_context = false) }}
								</td>
							</tr>

						{% else %}
							<tr>
								<td>{{ 'no_items_found' | trans }}</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
