{% extends 'admin/layout/base.html.twig' %}

{% block title %}
	{{ 'Contrat'|trans }}
{% endblock %}

{% block body %}

	<ul class="nav nav-tabs">
		<li class="nav-item active">
			<span class="nav-link active">
				<i class="fas fa-gavel text-danger"></i>
				{{ 'Contrat'|trans }}


			</span>
		</li>
		<li class="nav-item">
			<a class="nav-link" href="{{ path('admin_contrat_new') }}">
				<i class="fas fa-plus-square text-danger"></i>
				{{ 'cr√©er un contrat'|trans }}
			</a>
		</li>
	</ul>

	<div class="card mb-3">

		<div class="card-body">
			<div class="table-responsive">
				<table class="table" style="background-color: #FFFFFF">
					<thead class="thead">
						<tr>
							<th>{{"Bien" | trans}}</th>
							<th>{{"Utilisateur" | trans}}</th>
							<th>{{ 'Date de debut de location' | trans }}</th>
							<th>{{ 'Date de fin de location' | trans }}</th>
							<th>{{ 'action' | trans }}</th>
						</tr>
					</thead>
					<tbody>

						{% for contrat in contrats %}
							<tr>
								<td>{{contrat.bien.slug |raw }}</td>
								<td>{{contrat.user.username }}</td>
								<td>{{ contrat.dateDebut|date("m/d/Y") }}</td>
								<td>{{ contrat.dateFin|date("m/d/Y")  }}</td>
								<td>
									{{ include('admin/contrat/_action_form.html.twig', {contrat: contrat}, with_context = false) }}
								</td>
							</tr>

						{% else %}
							<tr>
								<td>{{ 'no_items_found' | trans }}</td>
							</tr>
						{% endfor %}

					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
